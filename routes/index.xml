<locales>
    <locale path="@routes/href">
        <en>/en/</en>
        <es>/es/</es>
        <it>/it/</it>
    </locale>
    <locale path="@routes/title">
        <en>Live - Create and share you music</en>
        <es>Live - Crea y comparte tu musica</es>
        <it>Live - Crea e condividi la tua musica</it>
    </locale>
    <locale path="index/menu/icons/trash">
        <en>Trash</en>
        <es>Basura</es>
        <it>Cestino</it>
    </locale>
    <locale path="index/menu/icons/login">
        <en>Login</en>
        <es>Entra</es>
        <it>Entra</it>
    </locale>
    <locale path="index/menu/icons/message">
        <en>Messages</en>
        <es>Mensajes</es>
        <it>Messaggi</it>
    </locale>
    <locale path="index/menu/icons/search">
        <en>Search</en>
        <es>Buscar</es>
        <it>Cerca</it>
    </locale>
    <locale path="index/menu/icons/create">
        <en>Create</en>
        <es>Crear</es>
        <it>Crea</it>
    </locale>
    <locale path="notifications/warn/wrong-format">
        <en>The field " {{placeholder}} " is in a wrong format</en>
        <es>Revisa el campo " {{placeholder}} "</es>
        <it>Il formato del campo " {{placeholder}} " é incorretto</it>
    </locale>
    <locale path="notifications/warn/required">
        <en>The field " {{placeholder}} " is required</en>
        <es>Rellena el campo " {{placeholder}} "</es>
        <it>Il campo " {{placeholder}} " é obbligatorio</it>
    </locale>
    <locale path="notifications/warn/min-length">
        <en>Field " {{placeholder}} " should be {{minLength}} characters minimum</en>
        <es>Campo " {{placeholder}} "! Minimo {{minLength}} caracters</es>
        <it>Campo " {{placeholder}} "! Minimo {{minLength}} caratteri</it>
    </locale>
    <locale path="notifications/warn/email-do-not-exists">
        <en>The email provided is not registered</en>
        <es>El correo no corresponde a ninguna cuenta</es>
        <it>L'indirizzo email non appartiene a nessuna utenza</it>
    </locale>
    <locale path="notifications/warn/email-exists">
        <en>The email provided has an account</en>
        <es>El correo ya tiene una cuenta</es>
        <it>L'indirizzo email e' gia' registrato</it>
    </locale>
    <locale path="notifications/warn/password-incorrect">
        <en>The password is incorrect</en>
        <es>La contraseña es incorrecta</es>
        <it>La password e' errata</it>
    </locale>
</locales>

